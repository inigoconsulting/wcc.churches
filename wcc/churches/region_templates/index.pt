<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="wcc.churches">

      <head>
<metal:block fill-slot="style_slot">
        <style>

            div.row {

                margin-bottom: 20px;
            }
            #content-core hr{
                margin-bottom: 20px;

            }

        </style>
    </metal:block>
    </head>



<body>

<metal:main fill-slot="content-core">
    <metal:content-core define-macro="content-core">
        <div class="row" tal:define="provider view/provider">
            <div class="cell width-3:4 position-0" tal:content="structure view/w/IBodyText.text/render">
            </div>
            <div class="cell width-1:4 position-3:4">
                <h3 i18n:translate="label_regional_ecumenical_organizations">
                    Regional Ecumenical Organizations
                </h3>
                <div>
                    <ul id="region-ecunemicalorgs">
                        <li tal:repeat="org provider/ecunemical_orgs">
                            <a tal:attributes="href org/absolute_url" tal:content="org/title"></a>
                        </li>
                    </ul>
                </div>
                <h3 i18n:translate="label_countries">Countries</h3>
                <div>
                    <ul id="region-countries">
                        <li tal:repeat="country provider/countries">
                            <a tal:attributes="href country/absolute_url" tal:content="country/title"></a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <hr/>
  </metal:content-core>
</metal:main>

</body>
</html>

