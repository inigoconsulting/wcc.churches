<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="wcc.churches">
      <head>
            <metal:block fill-slot="javascript_head_slot">
                <metal:use use-macro="context/@@collectivegeo-macros/openlayers" />

                <script tal:content="structure view/map_state">
                </script>
            </metal:block>
            <metal:block fill-slot="style_slot">
            <link rel="stylesheet" type="text/css" 
            tal:define="navroot context/@@plone_portal_state/navigation_root_url"
            tal:attributes="href string:${navroot}/++resource++wcc.churches/country.css"
            />
            </metal:block>
      </head>
<body>

<metal:main fill-slot="content-core">
  <metal:content-core define-macro="content-core">

      <tal:block define="provider view/provider">
      <tal:block define="cgmap view/cgmap">
          <metal:use use-macro="context/@@collectivegeo-macros/map-widget" />
      </tal:block>

      <table id="country-stats-table">
          <tal:block repeat="widget view/table_widgets">
              <tr>
                <th>
                  <span tal:content="widget/label" ></span> : 
                </th>
                  <td tal:content="structure widget/render" ></td>
              </tr>
          </tal:block>
      </table>

      <hr />

      <div class="visualClear">&nbsp;</div>
      <div tal:content="structure view/w/IBodyText.text/render">

      </div>


      <h4>Ecunemical Organizations and Councils</h4>
      <div id="country-ecunemicalorgs">
          <ul>
            <li tal:repeat="org provider/ecumenical_orgs">
                <a tal:attributes="href org/absolute_url"
                    tal:content="org/title">
                </a>
            </li>
          </ul>
      </div>

      <hr id="bottom-line" />
        </tal:block>
  </metal:content-core>
</metal:main>

</body>
</html>

