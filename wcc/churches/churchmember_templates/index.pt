<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="wcc.churches">

      <head>
    <metal:block fill-slot="style_slot">
        <link rel="stylesheet" type="text/css" 
            tal:define="navroot context/@@plone_portal_state/navigation_root_url"
            tal:attributes="href string:${navroot}/++resource++wcc.churches/member.css"
            />
        <style>
            #churchmember-details {
                width:100%;
            }
            #churchmember-details td, #churchmember-details th {
                width:50%;
            }
            #churchmember-details th {
                text-align:right;
                padding-right:10px;
            }

        </style>
    </metal:block>
    </head>



<body>

<metal:main fill-slot="content-core">
  <metal:content-core define-macro="content-core">

      <tal:block define="provider view/provider">
      <table id="churchmember-details">
          <tr>
              <th tal:content="view/w/church_family/label"></th>
              <td tal:content="structure view/w/church_family/render"></td>
          </tr>
          <tr>
              <th tal:content="view/w/based_in/label"></th>
              <td tal:content="structure view/w/based_in/render"></td>
          </tr>
          <tr>
              <th tal:content="view/w/present_in/label"></th>
              <td tal:content="structure view/w/present_in/render"></td>
          </tr>
          <tr>
              <th tal:content="view/w/membership/label"></th>
              <td tal:content="structure view/w/membership/render"></td>
          </tr>
          <tr>
              <th tal:content="view/w/pastors/label"></th>
              <td tal:content="structure view/w/pastors/render"></td>
          </tr>
          <tr>
              <th tal:content="view/w/congregations/label"></th>
              <td tal:content="structure view/w/congregations/render"></td>
          </tr>
          <tr>
              <th tal:content="view/w/member_of/label"></th>
              <td tal:content="structure view/w/member_of/render"></td>
          </tr>
          <tr>
              <th tal:content="view/w/assoc_member_of/label"></th>
              <td tal:content="structure view/w/assoc_member_of/render"></td>
          </tr>
          <tr tal:condition="provider/remoteUrl">
              <th tal:content="view/w/remoteUrl/label"></th>
              <td tal:content="structure view/w/remoteUrl/render"></td>
          </tr>

      </table>
    <hr class="style-one"/>

    <div id="churchtext" tal:content="structure context/text|nothing">

    </div>

    <hr class="style-one"/>

    </tal:block>
  </metal:content-core>
</metal:main>

</body>
</html>

